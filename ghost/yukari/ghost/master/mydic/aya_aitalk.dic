//---- 时间 ---------------------------------------------------------------------------------------------
daysfromfirstboot
{
  _days=0;
  _mon=(31,28,31,30,31,30,31,31,30,31,30,31);
  _fy=TOINT(firstboottime[100]);
  _fm=TOINT(firstboottime[1]);
  _fd=TOINT(firstboottime[2]);
  while _fy<=year {
    if _fy%4==0
      _mon[1]=29;
    if year==_fy {
      while _fm%12<month {
        _days+=_mon[_fm%12-1];
        _fm++;
      }
      _days=_days+day-_fd;
    }
    elseif _fy==TOINT(firstboottime[100]) {
      while _fm<=12 {
        _days+=_mon[_fm-1];
        _fm++;
      }
    }
    else {
      if _fy%4==0
        _days++;
      _days+=365;
    }
    _fy++;
  }
  _days;
}

